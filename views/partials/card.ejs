<div class="row"style="padding:50px 0px">
  <% for (let product of products){ %>
    <div class="col-lg-3 mb-3 ">
     <div class="card shadow-lg mx-auto" style="width: 18rem;">
        <img src="<%=product.img%>" class="card-img-top " style="height:200px" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%=product.name%></h5>
          <p class="card-text"><%=product.desc%></p>
          <h3 class="card-text">Price: Rs.<%=product.price%></h3>
          <a href="/products/<%=product.id%>" class="btn btn-primary my-2">Show Product</a>
          <form action="/products/cart/<%=product.id%>/add" method="post" class="d-inline"><button class="btn btn-primary">Add to Cart</button></form>
          <% if(user && product.creator == user.id) { %>
            <a href="/products/<%=product.id%>/edit" class="btn btn-primary my-3">Update</a>
          <form action="/products/<%=product.id%>?_method=delete" method="post" class="d-inline">
            <button class="btn btn-danger">Delete</button>
          </form>
            <%}%>
        </div>
      </div> 
    </div>
      <%}%>
</div>